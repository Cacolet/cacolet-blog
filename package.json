{
  "name": "sumyblog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "new": "modern new",
    "reset": "modern clear",
    "prepare": "npm run build && husky install",
    "build": "cross-env NX_DAEMON=false NX_REJECT_UNKNOWN_LOCAL_CACHE=0 nx run-many -t build --exclude @sumyblog/rspress-blog",
    "dev:blog": "cross-env NX_DAEMON=false NX_REJECT_UNKNOWN_LOCAL_CACHE=0 nx run @sumyblog/rspress-blog:dev",
    "build:blog": "cross-env NX_DAEMON=false NX_REJECT_UNKNOWN_LOCAL_CACHE=0 nx run @sumyblog/rspress-blog:build",
    "update:rspress": "ts-node ./scripts/update-rspress.ts"
  },
  "workspaces": {
    "packages": [
      "blog",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@modern-js-app/eslint-config": "2.47.0",
    "@modern-js/eslint-config": "2.47.0",
    "@modern-js/generator-utils": "3.3.9",
    "@modern-js/module-tools": "2.47.0",
    "@modern-js/monorepo-tools": "2.47.0",
    "@modern-js/plugin-tailwindcss": "2.47.0",
    "@modern-js/tsconfig": "2.47.0",
    "cross-env": "^7.0.3",
    "glob": "^10.3.10",
    "husky": "^8.0.0",
    "nx": "17.0.2",
    "prettier": "~2.8.1",
    "rimraf": "~3.0.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
